<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Contractor.Components.FreeTimeInfoText">

    <ContentView.Resources>
        <ResourceDictionary>
            <Style TargetType="Label">
                <Setter Property="FontSize" Value="25" />
                <Setter Property="FontFamily" Value="RobotoRegular" />
                <Setter Property="TextColor" Value="{AppThemeBinding Dark={DynamicResource White}, Light={DynamicResource Black}}" />
            </Style>
        </ResourceDictionary>
    </ContentView.Resources>
    
    <Grid RowDefinitions="auto, auto, auto">
        <Label Text="You have" />
        
        <Label Text="2h and 15mins" 
               Grid.Row="1"/>

        <Grid ColumnDefinitions="auto, auto, auto" 
              Grid.Row="2"
              ColumnSpacing="5">
            <Label Text="of" Grid.Column="0"/>
            
            <Label Text="Free Time"
                   Grid.Column="1" 
                   TextColor="{DynamicResource Secondary}"/>
            <Label Text="available!"
                   Grid.Column="2" />
        </Grid>
    </Grid>
</ContentView>
