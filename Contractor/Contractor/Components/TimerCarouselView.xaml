<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:compontents="clr-namespace:Contractor.Components"
             x:Class="Contractor.Components.TimerCarouselView">

    
    
    <CarouselView ItemsSource="{Binding TimerList}">
        <CarouselView.ItemTemplate>
            <DataTemplate>
                <Grid Padding="5">
                    <compontents:RoundProgressBar BindingContext="{Binding Context}"/>
                </Grid>
            </DataTemplate>
        </CarouselView.ItemTemplate>
    </CarouselView>
    
</ContentView>
